<script>
  function room_code_checking() {
    var code = document.getElementById("id_numcheckbooking").value;

    fetch("/get_booking_code", {
      method: "post",
      headers: {
        Accept: "application/json",
        "Content-Type": "application/json"
      },

      body: JSON.stringify({
        code
      })
    }).then((response) => response.json()).then((body) => {
      var reserv = body.result;
      console.log("reserv" + reserv);
      if (reserv.length > 0) {
        Swal.fire({
          title: "ใส่เลข 4 ตัวท้ายของเบอร์โทรศัพท์",
          input: "text",
          inputAttributes: {
            placeholder: "4 ตัวท้ายของเบอร์โทร เช่น 5991",
            inputmode: "numeric",
            pattern: "[0-9]{4}",
            minLength: 4,
            maxLength: 4
          },

          showCancelButton: true,
          confirmButtonText: "Confirm",
          cancelButtonText: "Cancel"
        }).then((result) => {
          if (result.isConfirmed) {
            const phoneNumber = result.value;
            fetch("/get_reserv_info", {
              method: "post",
              headers: {
                Accept: "application/json",
                "Content-Type": "application/json"
              },
              body: JSON.stringify({
                code,
                phoneNumber
              })
            }).then((response) => response.json()).then((body) => {
              var reserv_info = body.reserv_info[0];
              var showservice = body.showservice;
              console.log(reserv_info);
              console.log(showservice);

              if (reserv_info == undefined) {
                Swal.fire({
                  title: "เบอร์โทรศัพท์ไม่ถูกต้อง"
                });
              } else {
                document.getElementById("check-reserv_id").value = reserv_info.reserved_id;
                document.getElementById("check-room_number").value = reserv_info.num_room;
                document.getElementById("check-room_type").value = reserv_info.name + `(${reserv_info.name_th
                  })`;
                document.getElementById("check-status").innerHTML = reserv_info.status_name;
                document.getElementById("check-checkin").value = reserv_info.checkin;
                document.getElementById("check-checkout").value = reserv_info.checkout;
                document.getElementById("check-cus-id").value = reserv_info.cus_id;
                document.getElementById("check-fullname").value = `${reserv_info.f_name
                  } ${reserv_info.l_name
                  }`;
                document.getElementById("check-p-num").value = reserv_info.p_num;
                document.getElementById("check-email").value = reserv_info.email;
                document.getElementById("roomprice").value = reserv_info.price + " บาท";
                document.getElementById("roompricetotal").value = reserv_info.total_price + " บาท";
                document.getElementById("fromcountry").value = reserv_info.country;
                document.getElementById("info_bed").value = reserv_info.bed;
                document.getElementById("info_roomsize").value = reserv_info.size + " ตารางเมตร";
                document.getElementById("info_countcustomer").value = reserv_info.count_humen + " คน";
                document.getElementById("info_extional").value = reserv_info.extional;
                document.getElementById("info_pay").value = reserv_info.pay_type;

                document.getElementById("check-status").classList.add(reserv_info.status_colorclass);
                var service_element = document.getElementById("showservice");
                service_element.innerHTML = "";

                for (let i = 0; i < showservice.length; i++) {
                  var html = `
                        <div class="col-4 col-sm-4 col-md-4 col-lg-4">
                            <label class="col-form-label me-2">${showservice[i].name
                    }</label>
                        </div>
                        <div class="col-4 col-sm-4 col-md-4 col-lg-4 d-flex">
                            <div class="me-2">${showservice[i].price
                    }</div>
                            <div class="">บาท</div>

                        </div>
                                        `;
                  var htmldiv = document.createElement("div");
                  htmldiv.setAttribute("class", "col-12 col-sm-12 col-md-12 col-lg-12 d-flex align-items-center");

                  htmldiv.innerHTML = html;
                  service_element.appendChild(htmldiv);
                }

                document.getElementById("check_card").style.display = "block";
              }
            });
          } else if (result.dismiss === Swal.DismissReason.cancel) {
            console.log("Cancelled");
            // Perform further actions for cancellation
          }
        });
      } else {
        Swal.fire("ไม่มีรหัสการจองนี้");
      }
    });
  }
</script>