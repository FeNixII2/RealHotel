<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#home" onclick="showSection('home')">Hotel BS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNavDropdown">
                <ul class="navbar-nav w-100 ms-auto justify-content-end align-items-center">
                    <div class="padding-searchbar d-flex mx-auto" id="padding-searchbar">
                        <div class="searchbar">
                            <div class="d-flex" id="searchbar1">
                                <div class=" d-flex justify-content-center align-items-center " id="psb">
                                    <label for="checkin" class="no-select mx-2 w-50 form-label" style="color:white">เช็คอิน:</label>
                                    <input type="text" id="checkin" name="checkin" class="form-control" style="width: 100%;" />
                                </div>
                                <div class=" d-flex justify-content-center align-items-center " id="psb2">
                                    <label for="checkout" class="no-select mx-2 w-50 form-label" style="color:white">เช็คเอาท์:</label>
                                    <input type="text" id="checkout" name="checkout" class="form-control " style="width: 100%;" />
                                </div>
                                <div class=" d-flex justify-content-center align-items-center " id="psb3">
                                    <label class=" no-select mx-2 w-50 form-label" style="color:white">ประเภท:</label>
                                    <select id="roomstype" class="form-select form-control " style="width: 100%;">
                                        <option value="all" selected="selected">ทั้งหมด</option>
                                        <%for(var i=0 ;i<roomstype.length;i++){%>
                                            <option value="<%= roomstype[i].id %>">
                                                <%= roomstype[i].name_th %>
                                                    <%= roomstype[i].bed %>
                                            </option>
                                            <%}%>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-secondary mx-3" id="searchbtn" onclick="booking_search(),showSection('booking')">ค้นหา</button>
                    </div>
                    <li class="nav-item">
                        <a class="nav-link" href="#home" onclick="showSection('home')">หน้าหลัก</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#rooms" onclick="showSection('rooms')">ห้องพัก</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#booking" onclick="showSection('booking'),booking_search()">จองห้องพัก</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#checkbooking" onclick="showSection('checkbooking'),booking_search()">เช็คห้องพัก</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contract" onclick="showSection('contract'),booking_search()">Contract</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <main>
        <%- include('homesection.ejs') %>
            <%- include('roomssection.ejs') %>
                <%- include('bookingsection.ejs') %>
                    <%- include('checkbooking.ejs') %>
                        <%- include('contract.ejs') %>
    </main>


</body>

<script>
    // fix show section when you refresh webpage
    window.addEventListener('load', function() {
        let hash = location.hash; // get current hash location
        let id = hash.substring(1); // remove # from location
        if (id != (null || '' || "")) {
            document.querySelectorAll('section').forEach(function(element) {
                element.style.display = 'none';
            });
            showSection(id)
        } else {
            showSection('home')
        }
    });

    // JavaScript function to show a specific section
    function showSection(id) { // hide all sections
        document.querySelectorAll('section').forEach(function(element) {
            element.style.display = 'none';
        });
        // show the selected section
        document.getElementById(id).style.display = 'block';
    }

    function handleScreenSizeChange() {
        if (window.innerWidth <= 576) {
            document.getElementById('searchbar1').classList.remove('d-flex');
            document.getElementById('padding-searchbar').classList.add('mt-3');
            document.getElementById('psb').classList.add('mb-2');
            document.getElementById('psb2').classList.add('mb-2');
            document.querySelectorAll('.nav-link').forEach(function(navLink) {
                navLink.setAttribute('data-bs-toggle', 'collapse');
                navLink.setAttribute('data-bs-target', '#navbarNavDropdown');
                navLink.setAttribute('aria-expanded', 'false');
                navLink.setAttribute('aria-controls', 'Toggle navigation');
            });
            var searchBtn = document.getElementById('searchbtn');
            searchBtn.setAttribute('data-bs-toggle', 'collapse');
            searchBtn.setAttribute('data-bs-target', '#navbarNavDropdown');
            searchBtn.setAttribute('aria-expanded', 'false');
            searchBtn.setAttribute('aria-controls', 'Toggle navigation');
        } else {
            document.getElementById('searchbar1').classList.add('d-flex');
            document.getElementById('padding-searchbar').classList.remove('mt-3');
            document.getElementById('psb').classList.remove('mb-2');
            document.getElementById('psb2').classList.remove('mb-2');
            document.querySelectorAll('.nav-link').forEach(function(navLink) {
                navLink.removeAttribute('data-bs-toggle');
                navLink.removeAttribute('data-bs-target');
                navLink.removeAttribute('aria-expanded');
                navLink.removeAttribute('aria-controls');
            });
            var searchBtn = document.getElementById('searchbtn');
            searchBtn.removeAttribute('data-bs-toggle');
            searchBtn.removeAttribute('data-bs-target');
            searchBtn.removeAttribute('aria-expanded');
            searchBtn.removeAttribute('aria-controls');
        }
    }
    handleScreenSizeChange();
    window.addEventListener('resize', handleScreenSizeChange);
</script>

</html>
